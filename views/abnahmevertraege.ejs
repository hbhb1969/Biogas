<%- include header %>
<div class="buchungen-wrapper inhalt">
  <div class="links">
    <section id="abnahmevertraege-formular" class="container formular">
      <form role="form">
        <% if (message.length > 0) { %>
        <div class="alert">
          <%= message %>
        </div>
        <% } %>
        <div id="buchungsfehler" style="display:none" class="alert">
          <p>Fehler:</p>
          <span></span>
        </div>
        <h2>Auswertungszeitraum eingeben</h2>
        <div class="form-group">
          <label for="Jahr" class="control-label">Jahr</label>
          <div class="select-wrapper">
            <select id="jahr" class="form-control" name="Jahr" placeholder="Jahr">
                     <%- jahrOptions %>
                </select>
          </div>
        </div>
        <div class="form-group">
          <div>
            <button id="btn-anzeigen" type="submit" class="btn gruen btn-anzeigen" formaction="/auswertungen/abnahmevertraege" formmethod="post">Anzeigen</button>
          </div>
        </div>
      </form>
    </section>

    <% if (abnahmevertraege.length > 0) { %>
    <section class="container tabelle tabelle-auswertung" id="abnahmevertraege-tabelle">
      <div class="hauptblock ">
        <h2>Abnahmevertr√§ge im Jahr <%= jahr %></h2>
        <div class="table-wrap">
          <div class="table" id="tabelle-av">
            <table>
              <thead>
                <tr>
                  <th>
                  </th>
                  <th>
                    Abnehmer
                  </th>
                  <th class="t-menge">
                    Soll
                  </th>
                  <th class="t-menge th-ist">
                    Ist <div class="farbe-ist"></div>
                  </th>
                  <th class="t-menge th-offen">
                    Offen <div class="farbe-offen"></div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <%- abnahmevertraege %>
                <tr>
                  <td></td>
                  <td>Gesamt</td>
                  <td id="sollGesamt" class="t-rechts"></td>
                  <td id="istGesamt" class="t-rechts"></td>
                  <td id="offenGesamt" class="t-rechts"></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>
    <% } %>
  </div>
  <% if (abnahmevertraege.length > 0) { %>
  <div class="rechts">
    <section class="container kd-abnahmevertraege" id="kd-abnahmevertraege">
      <div class="pie" id="pie"></div>
    </section>
    <script src="https://d3js.org/d3.v5.min.js"></script>
    <script language="javascript" type="text/javascript" src="/scripts/formularcheck.js"></script>
    <script language="javascript" type="text/javascript" src="/scripts/kreisdiagramm.js"></script>
  </div>
  <% } %>
</div>
<%- include footer %>